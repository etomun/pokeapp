<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/view_160"
            android:layout_height="@dimen/view_160"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_48"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_200"
            android:layout_height="@dimen/view_32"
            android:layout_marginTop="@dimen/view_4"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_80"
            android:layout_height="@dimen/view_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/view_20"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_300"
            android:layout_height="@dimen/view_20"
            android:layout_marginTop="@dimen/view_16"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_280"
            android:layout_height="@dimen/view_20"
            android:layout_marginTop="@dimen/view_12"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_300"
            android:layout_height="@dimen/view_20"
            android:layout_marginTop="@dimen/view_12"
            android:background="@drawable/bg_shimmer_round" />

        <LinearLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/view_20">

            <View
                android:layout_width="@dimen/view_100"
                android:layout_height="@dimen/view_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/view_20"
                android:layout_marginEnd="@dimen/view_8"
                android:background="@drawable/bg_shimmer_round" />

            <View
                android:layout_width="@dimen/view_100"
                android:layout_height="@dimen/view_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/view_8"
                android:layout_marginTop="@dimen/view_20"
                android:background="@drawable/bg_shimmer_round" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/view_360"
            android:layout_height="@dimen/view_16"
            android:layout_marginTop="@dimen/view_16"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_360"
            android:layout_height="@dimen/view_16"
            android:layout_marginTop="@dimen/view_16"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_360"
            android:layout_height="@dimen/view_16"
            android:layout_marginTop="@dimen/view_16"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_360"
            android:layout_height="@dimen/view_16"
            android:layout_marginTop="@dimen/view_16"
            android:background="@drawable/bg_shimmer_round" />

        <View
            android:layout_width="@dimen/view_360"
            android:layout_height="@dimen/view_16"
            android:layout_marginTop="@dimen/view_16"
            android:background="@drawable/bg_shimmer_round" />

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>