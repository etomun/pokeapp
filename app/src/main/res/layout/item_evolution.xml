<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/view_12">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/from_type"
            android:layout_width="@dimen/view_80"
            android:layout_height="@dimen/view_80"
            android:adjustViewBounds="true"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/from_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_4"
            tools:text="1/4 x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_12"
        android:layout_marginEnd="@dimen/view_12"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/specs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_15"
            tools:text="Lv 16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_long_arrow_right_80"
            app:tint="@color/black_7" />

        <TextView
            android:id="@+id/trigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_15"
            tools:text="Lv 16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/to_type"
            android:layout_width="@dimen/view_80"
            android:layout_height="@dimen/view_80"
            android:adjustViewBounds="true"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/to_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_4"
            tools:text="1/4 x" />
    </LinearLayout>
</LinearLayout>